<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consRoot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_94"
        android:background="@color/App_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/txtNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="@string/one"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            tools:layout_editor_absoluteX="-50dp"
            tools:layout_editor_absoluteY="-16dp" />

        <TextView
            android:id="@+id/txtFixNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/one"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/sp_16"
            android:visibility="gone"
            android:layout_margin="@dimen/dp_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutDriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/imgCircleDriver"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_6"
                android:src="@drawable/img_circle"
                android:layout_margin="@dimen/dp_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/red" />

            <TextView
                android:id="@+id/txtNumberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="@dimen/sp_14"
                android:text=""
                app:layout_constraintBottom_toBottomOf="@+id/imgCircleDriver"
                app:layout_constraintEnd_toEndOf="@+id/imgCircleDriver"
                app:layout_constraintStart_toStartOf="@+id/imgCircleDriver"
                app:layout_constraintTop_toTopOf="@+id/imgCircleDriver" />



        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutConductor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/imgCircleConductor"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_6"
                android:src="@drawable/img_circle"
                android:layout_margin="@dimen/dp_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/txtNumberNameCond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="@dimen/sp_14"
                android:text="1"
                app:layout_constraintBottom_toBottomOf="@+id/imgCircleConductor"
                app:layout_constraintEnd_toEndOf="@+id/imgCircleConductor"
                app:layout_constraintStart_toStartOf="@+id/imgCircleConductor"
                app:layout_constraintTop_toTopOf="@+id/imgCircleConductor" />



        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutKuaNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/imgCircleKua"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_6"
                android:src="@drawable/img_circle"
                android:layout_margin="@dimen/dp_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/bulish"
                />

            <TextView
                android:id="@+id/txtNumberNameKua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="@dimen/sp_14"
                android:text=""
                app:layout_constraintBottom_toBottomOf="@+id/imgCircleKua"
                app:layout_constraintEnd_toEndOf="@+id/imgCircleKua"
                app:layout_constraintStart_toStartOf="@+id/imgCircleKua"
                app:layout_constraintTop_toTopOf="@+id/imgCircleKua" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>